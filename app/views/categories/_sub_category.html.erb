<table>
	<tr>
		<thead>
			<td>Category Name</td>
			<td>SubCategory Names</td>
		</thead>	
	</tr>
	<tbody>
		<%@categories.map do |category|%>
			<tr>
				<td><%= category.name%></td>
				<td><%= category.sub_categories.pluck(:name).join(",") if category.sub_categories.present?%></td>
			</tr>
		<%end%>
	</tbody>
</table>